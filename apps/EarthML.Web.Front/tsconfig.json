{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES5",
    "module": "amd",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": "src",
    "outDir": "wwwroot/libs/EarthML",
    "types": [ "modernizr" ],
    "moduleResolution": "node",
    "traceResolution": true,
    "baseUrl": ".",
    "paths": {
      "kolayout/*": ["node_modules/kolayout/dist/typings/*"]
    }
  },
  "exclude": [
    "node_modules",
    ".npm",
    "wwwroot"
  ]
}